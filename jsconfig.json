  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "bundler",
    "target": "esnext",
    "jsx": "react-jsx",
    "allowImportingTsExtensions": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true
